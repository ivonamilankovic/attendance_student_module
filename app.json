{
  "expo": {
    "name": "VTS attendance",
    "slug": "attendance_student_module",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./app/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./app/assets/splash.jpg",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist":{
        "NSAppTransportSecurity":{
          "NSAllowsArbitraryLoads": true
        }, 
        "NSCameraUsageDescription": true,
        "NSLocationAlwaysAndWhenInUseUsageDescription": "REASON_FOR_REQUEST",
        "UIBackgroundModes": ["location", "fetch"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./app/assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["INTERNET", "ACCESS_NETWORK_STATE", "CAMERA", "ACCESS_BACKGROUND_LOCATION"]
    },
    "web": {
      "favicon": "./app/assets/favicon.png"
    }
  }
}
